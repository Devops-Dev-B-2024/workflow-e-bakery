{
    "increment": "patch",
    "git": {
      "tagName": "v${version}",
      "commitMessage": "Release v${version}",
      "requireCleanWorkingDir": true
    },
    "github": {
      "publish": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md"
      }
    }
}
  